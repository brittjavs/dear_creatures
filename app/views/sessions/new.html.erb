<div class="container">
    <div class="form">
    <h2>Sign in to your account</h2>
        <%=form_tag login_path do%>
        <div class="input">
        <%=label_tag :username %>
        <%=text_field_tag :username%>
        </div>
        <div class="input">
        <%=label_tag :password %>
        <%=password_field_tag :password %>
        </div>
        <%=submit_tag 'Log In', class: "button"%>
        <%end%>
    </div>
</div>
